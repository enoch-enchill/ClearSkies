<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/rootView">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="145dp"
        android:layout_height="190dp"
        android:layout_margin="8dp"
        android:backgroundTint="@android:color/holo_red_dark"
        app:cardCornerRadius="24dp"
        tools:backgroundTint="@android:color/holo_orange_dark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="170dp"
                android:layout_height="124dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="-40dp"
                android:src="@drawable/ic_splash_big_cloud"
                android:contentDescription="@string/weather_icon" />


            <TextView
                android:id="@+id/txtTimeOfDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                tools:text="12:00" />

            <TextView
                android:id="@+id/txtDayOfWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTimeOfDay"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Monday"
                android:transitionName="fade" />

            <ImageView
                android:id="@+id/imgForecastIcon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_below="@id/txtDayOfWeek"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                tools:src="@drawable/ic_splash_big_cloud"
                android:contentDescription="@string/weather_icon" />

            <TextView
                android:id="@+id/textTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imgForecastIcon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold"
                tools:text="23°"/>

            <LinearLayout
                android:id="@+id/linearLayoutTempMaxMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textTemp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTempMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:textColor="@color/whiteWithHalfOpacity"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="24°" />

                <TextView
                    android:id="@+id/txtTempMax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="56°" />
            </LinearLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>